pipeline {
    agent any

	tools {
		maven "maven-3.5.0"
	}
	stages{
	  stage('SonarQube analysis') {
	     steps {
		//Prepare SonarQube scanner enviornment
		withSonarQubeEnv('sonarqube-7.4') {
		    sh ' \'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:2.4:sonar\'' 
		}
	      }
	}
  stage('Execute Maven') {
		steps {
		    sh 'mvn clean package'
			}
	}
 } 
 }
